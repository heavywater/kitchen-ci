- @nav = sitemap.find_resource_by_path("getting-started/nav.yml") # TODO: I'd rather find this resource by a relative path -ch
- @nav_index = @nav.data.guide.index { |i| i.url == File.basename(current_page.url) } * 1.0
- @progress = (@nav_index / @nav.data.guide.size) * 100
- @filename = File.basename(current_page.source_file)
- @forkthedocs = "http://github.com/heavywater/kitchen-docs/edit/master/source/getting-started/#{@filename}" # TODO: move getting-started content into /source/docs subdirectory and remove static reference to /source/getting-started/

- wrap_layout :layout do

  .welcomewrap
    %h1= "Getting Started Guide"

  .progress
    .progress-bar{ "role" => "progressbar", "aria-valuenow" => "guide_progress", "aria-valuemin" => "0", "aria-valuemax" => "100", "style" => "width: #{@progress}%;" } 
      %span.sr-only{ id: "#{@progress}% Complete" }

  .container.guide
    .row
      .article.col-md-8
        - if current_resource.data.danger
          %div.alert.alert-danger= current_resource.data.danger

        - if current_resource.data.warning
          %div.alert.alert-warning= current_resource.data.warning

        - if current_resource.data.alert
          %div.alert.alert-info= current_resource.data.alert

        %span#githubs
          %h2= current_page.data.title
          %a{ href: @forkthedocs }
            %span.glyphicon.glyphicon-pencil

        :preserve
          #{yield}

        %hr

        %div#suggestions
          %div.row
            %div.col-md-8.pull-left
              %p= data.docs.promotion.sponsorship 

            %div.col-md-4.pull-right
              - if current_resource.data.next
                %a.btn.btn-default{ href: current_resource.data.next.url }
                  %span.glyphicon.glyphicon-circle-arrow-right
                  = current_resource.data.next.text

      .col-md-4
        %ul.sections
          / - guide_sections.each do |section|
          /   %li= guide_nav section.last, section.first
          - @nav.data.guide.each do |section|
            - unless section.hide?
              %li
                %a{ href: section.url }= section.name

